@model IEnumerable<UserRolesModificationModel>


    <div id="status" class="animationStop">
        <span class="fa fa-spinner"></span>
    </div>

    <div class="bg-primary m-1 p-1 text-white">
        <h4>Användare</h4>
    </div>

    <table class="table table-sm table-bordered">
        <tr><th>Förnamn</th><th>Efternamn</th><th>Email</th><th>Roll</th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">Inga användare</td></tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="UpdateUserRole" method="post">
                            <select class="custom-select select-multiple" id="SelectedRoleIds" name="SelectedRoleIds" multiple="multiple" asp-items="@user.Roles"></select>
                            <input type="hidden" name="UserId" value="@user.UserId" />
                            <input class="btn btn-primary btn-sm submitBtn" type="submit" value="Spara" />
                        </form>
                    </td>
                </tr>
            }
        }
    </table>


    @section CSS
        {
        <link href="~/css/Admin/Index.css" rel="stylesheet" />
    }

    @section Scripts
        {
        <script src="~/js/Admin/Index.js"></script>
    }


